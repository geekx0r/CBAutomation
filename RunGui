import RunExeRemotely
import RunOSQuery
import RunShRemotely
import RunPSScriptRemotely
import urllib
import pandas as pd
from cbapi.response import CbEnterpriseResponseAPI, Sensor, SensorGroup
import PySimpleGUI as sg

import PySimpleGUI as sg

if __name__ == '__main__':
    cb = CbEnterpriseResponseAPI()
    sg.theme('DarkAmber')   # Add a touch of color
    # All the stuff inside your window.
    layout = [  [sg.Text('Run Carbon black process search')],
                [sg.Text('process search'), sg.InputText(key='query')],
                [sg.Button('Search'), sg.Button('Cancel')],
                [sg.Text('searching for: ' ), sg.Text(size=(100,1), key='-OUTPUT-')]]

    # Create the Window
    window = sg.Window('Window Title', layout)
    # Event Loop to process "events" and get the "values" of the inputs
    while True:
        event, values = window.read()
        if event in (None, 'Cancel'):   # if user closes window or clicks cancel
            break

        if event == 'Search':
            # change the "output" element to be the value of "input" element
            window['-OUTPUT-'].update(values['query'])

            query = urllib.parse.quote(str(values['query']))
            print('You entered ', query)

    window.close()